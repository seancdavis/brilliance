<%= simple_form_for(
  current_idea,
  :url => idea_update_path(current_idea, params[:step])
) do |f| %>
  <%= f.simple_fields_for :idea_ratings, current_idea_ratings do |rf| %>
    <%= rf.input(
      :value,
      :label => rf.object.rating.title,
      :as => :range
    ) %>
    <%= rf.input :setting_id, :as => :hidden %>
  <% end %>
  <%= idea_redirect_field(f, :thanks) %>
  <%= f.submit "Next" %>
<% end %>
