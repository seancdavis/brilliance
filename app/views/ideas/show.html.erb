<section class="idea">
  <div class="idea-content">
    <h1>
      <%= current_idea.title %>
      <%= link_to(edit_idea_path(current_idea)) do %>
        <i class="icon-pencil"></i>
      <% end %>
    </h1>
    <span class="category">
      <%= link_to current_idea.category.title,
                  filter_category_path(current_idea.category) %>
    </span>
    <% if current_idea.status_id.present? %>
      <span class="status">
        <%= link_to current_idea.status.title,
                    filter_status_path(current_idea.status) %>
      </span>
    <% end %>
    <%= content_tag(:div, current_idea.description) %>
  </div>
</section>

<section class="comments">
  <%= new_comment_form(current_idea) %>
  <%= render current_idea.comments.oldest_first %>
</section>
