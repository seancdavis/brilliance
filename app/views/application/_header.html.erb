<header class="main">
  <%= content_tag(:h1, link_to('Brilliance', root_path), :class => 'logo') %>
  <% if user_signed_in? %>
    <div class="user-links">
      <%= link_to(cambium.admin_dashboard_path) do %>
        <%= content_tag(:i, nil, :class => 'icon-cogs') %>
      <% end if current_user.is_admin? %>
      <%= link_to(edit_profile_path) do %>
        <%= content_tag(:i, nil, :class => 'icon-user') %>
      <% end %>
      <%= link_to(destroy_user_session_path) do %>
        <%= content_tag(:i, nil, :class => 'icon-exit') %>
      <% end %>
      <%= avatar(current_user, 84) %>
    </div>
  <% end %>
</header>
